<Window x:Class="LibraryManager.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:LibraryManager.ViewModel"
        xmlns:view="clr-namespace:LibraryManager.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1400">
    <Window.DataContext>
        <viewModel:MainWindowViewModel />
    </Window.DataContext>
    <Window.Resources>
        <Style x:Key="MenuButton" TargetType="Button">
            <Setter Property="Height" Value="40" />
            <Setter Property="Margin" Value="15 5" />
            <Setter Property="Background" Value="#FF2E63" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="#EAEAEA" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" BorderBrush="Black" BorderThickness="0"
                                Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <EventTrigger RoutedEvent="Button.MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Duration="0:0:0.2" To="#08D9D6"
                                                        Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                                        Storyboard.TargetName="border" />
                                        <ColorAnimation Duration="0:0:0.2" To="#252A34"
                                                        Storyboard.TargetProperty="(Button.Foreground).(SolidColorBrush.Color)" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="Button.MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Duration="0:0:0.2" To="#FF2E63"
                                                        Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                                        Storyboard.TargetName="border" />
                                        <ColorAnimation Duration="0:0:0.2" To="#EAEAEA"
                                                        Storyboard.TargetProperty="(Button.Foreground).(SolidColorBrush.Color)" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="18" />
        </Style>
        <Style TargetType="{x:Type Label}">
            <Setter Property="FontSize" Value="18" />
        </Style>

        <DataTemplate DataType="{x:Type viewModel:LoginViewModel}">
            <view:LoginView />
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type viewModel:RegisterViewModel}">
            <view:RegisterView />
        </DataTemplate>
        
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Background="#252A34">
            <Button Content="Dashboard" Style="{StaticResource MenuButton}" Margin="15 30 15 5"
                    Command="{Binding DashboardCommand}" />
            <Button Content="Books" Style="{StaticResource MenuButton}" Command="{Binding BooksCommand}" />
            <Button Content="Bookshelf" Style="{StaticResource MenuButton}" Command="{Binding BookshelfCommand}" />

            <!-- <Button Content="Additional Menu 1" Style="{StaticResource MenuButton}" Command="{Binding AdditionalCommand1}" Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVisibilityConverter}}" /> -->
            <!-- <Button Content="Additional Menu 2" Style="{StaticResource MenuButton}" Command="{Binding AdditionalCommand2}" Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVisibilityConverter}}" /> -->
        </StackPanel>

        <ContentControl Grid.Column="1" Background="#EAEAEA" Content="{Binding CurrentView}" />
    </Grid>
</Window>